<div class="center">
  <% if brand_signed_in? %>
      <%= link_to  raw('<span class="glyphicon glyphicon-plus"></span>Add Pic'), new_article_path %>
  <%end%>
</div>

<div id="articles" class="transitions-enabled">
    <% @brand.articles.each do |article| %>
        <div class="box panel panel-default">
            <%= link_to image_tag(article.image.url(:medium)), article %>
            <% if article.brand == current_brand %>
             <div class="panel-body">
              <div class="actions">
                <%= link_to  raw('<span class="glyphicon glyphicon-edit"></span>Edit'), edit_article_path(article) %>
                <%= link_to  raw('<span class="glyphicon glyphicon-trash"></span>Delete'), article, method: :delete, data: { confirm: 'Are you sure?' } %>
              </div>
              </div>
          <% end %>
    </div>
  <% end %>
</div>


